{{!< centercolumn}}

<div class="row">
    <div class="col-md"></div>
    <div class="col-md">
        <form class="form-inline">
            <div class="form-group mb-2">
                <label class="sr-only">Mobile Number</label>
                <input type="text" readonly class="form-control-plaintext" value="{{user.mobile_number}}">
            </div>
            <div class="form-group mx-sm-3 mb-2">
                <label class="sr-only">OTP</label>
                <input type="password" class="form-control" placeholder="Enter the 6 digit OTP">
            </div>
            <button type="submit" class="btn btn-primary mb-2">Verify</button>
        </form>
    </div>
    <div class="col-md"></div>
</div>